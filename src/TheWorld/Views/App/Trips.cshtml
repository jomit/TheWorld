@model IEnumerable<TheWorld.Models.Trip>
@{
    ViewBag.Title = "My Trips";
}
@section Scripts{
    <script src="~/lib/angular/angular.min.js" type="text/javascript"></script>
    <script src="~/js/simpleControls.js" type="text/javascript"></script>
    <script src="~/js/app-trips.js" type="text/javascript"></script>
    <script src="~/js/tripsController.js" type="text/javascript"></script>
}
<div class="row" data-ng-app="app-trips">
    <div data-ng-controller="tripsController as vm"
         class="col-md-6 col-md-offset-3">
        <div class="text-danger" data-ng-show="vm.errorMessage">{{ vm.errorMessage }}</div>
        <wait-cursor display-when="vm.isBusy"></wait-cursor>
       <table class="table table-responsive table-striped">
           <tr data-ng-repeat="trip in vm.trips">
               <td>{{ trip.name }}</td>
               <td>{{ trip.created | date:'MM-dd-yyyy' }}</td>
               <td><a href="#" class="btn btn-sm btn-primary">Manage</a></td>
           </tr>
       </table>
        <form novalidate name="newTripForm" data-ng-submit="vm.addTrip()">
            <div class="form-group">
                <label for="name">Trip Name</label>
                <input class="form-control" type="text" id="name" name="name"
                       data-ng-model="vm.newTrip.name" required data-ng-minlength="5" />
                <span data-ng-show="newTripForm.name.$error.required" class="text-warning">Name is required</span>
                <span data-ng-show="newTripForm.name.$error.minlength" class="text-warning">Name must be atleast 5 characters</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success btn-sm"
                       data-ng-disabled="newTripForm.$invalid"/>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>The World</h2>
        <p>This is going to be fun !!!!!!</p>
        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location  </label>
                <input class="form-control"/>
            </div>
            <input type="submit" value="Add" class="btn btn-success" />
        </form>
    </div>
    <div class="col-md-6">
        <h2>  The Map</h2>
        <ul>
            @foreach (var trip in Model)
            {
               <li>@trip.Name (@trip.Created.ToShortDateString())</li>
            }
    </ul>
    </div>
</div>
